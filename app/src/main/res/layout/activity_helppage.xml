<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/helpimg1"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/help"/>
    <TextView
        android:id="@+id/helpnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="HELP"
        android:layout_below="@id/helpimg1"
        android:layout_centerHorizontal="true"
        android:textSize="42sp"
        android:fontFamily="@font/lovan"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/caviardreams"
        android:paddingStart="20dp"
        android:layout_below="@id/helpnm"
        android:paddingEnd="20sp"
        android:text="ndsgirw wbviwvw vwvuwbvw vwyrvbw8v w vwv8w  8efgwe fw9efwefbwefwigifaprf grgpeirgebgeriguergeg"
        android:textAlignment="center"
        android:textSize="20sp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:id="@+id/social"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/textback"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:rowCount="2">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/insta"
            android:layout_alignParentBottom="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/x"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/facebook"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/linkedin"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/yt"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/whatsapp"
            android:layout_alignParentBottom="true"/>
    </GridLayout>
    <Button
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="Phone call"
        android:textColor="@color/white"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="-50dp"
        android:background="@drawable/btnback"
        android:layout_below="@+id/social"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/splash3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/guss3"
        android:layout_alignParentTop="true"/>
    <ScrollView
        android:id="@+id/signsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/splash3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textback"
        android:hint="Enter Name (Username):"
        android:padding="15dp"
        android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:gravity="center">

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textback"
                    android:fontFamily="@font/caviardreams"
                    android:hint="Password :"
                    android:padding="15dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:tooltipText="Password must be 6 digit long" />

                <EditText
                    android:id="@+id/repass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textback"
                    android:fontFamily="@font/caviardreams"
                    android:hint="Re-Password :"
                    android:padding="15dp"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textback"
                android:fontFamily="@font/caviardreams"
                android:hint="Mobile No :"
                android:padding="15dp"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textback"
                android:fontFamily="@font/caviardreams"
                android:hint="Enter Email :"
                android:padding="15dp"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/pname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textback"
                android:fontFamily="@font/caviardreams"
                android:hint="Father/Mother Name :"
                android:padding="15dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pname"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textback"
                android:fontFamily="@font/caviardreams"
                android:hint="Date Of Birth :"
                android:padding="15dp"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dob"
                android:layout_below="@+id/pname"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textback"
                android:fontFamily="@font/caviardreams"
                android:hint="Profession :"
                android:padding="15dp"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/splash4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profession"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
        <Spinner
            android:id="@+id/jainv"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviardreams"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/textback"
            android:layout_marginEnd="15dp"
            />
        <Spinner
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/caviardreams"
            android:background="@drawable/textback"
            />
    </LinearLayout>
            <LinearLayout
                android:id="@+id/splash5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/splash4"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/signin"
                    android:layout_width="150dp"
                    android:background="@drawable/textback"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviardreams"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"
                    android:text="SIGNIN"
                    />
                <Button
                    android:id="@+id/scancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="CANCEL"
                    android:padding="15dp"
                    android:fontFamily="@font/caviardreams"
                    android:background="@drawable/textback"
                    />
            </LinearLayout>

    <TextView
        android:id="@+id/logswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Have Account ? Login" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
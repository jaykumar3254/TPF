<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TalkWrite"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:layout_margin="20dp"
        android:fontFamily="@font/lovan"/>
    <ImageView
        android:id="@+id/tts1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/find1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/ttstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:layout_below="@+id/tts1"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textback"
        android:hint="Enter text :"
        android:padding="15dp"
        android:textSize="15dp" />
    <Button
        android:id="@+id/speak1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/ttstext"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btnback"
        android:text="Speak"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <Button
        android:id="@+id/ttsrecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/speak1"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btnback"
        android:text="record"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/ttsresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/ttsrecord"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textback"
        android:hint="result :"
        android:padding="15dp"
        android:textSize="15dp" />
</RelativeLayout>
